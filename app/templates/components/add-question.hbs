{{#if addNewQuestion}}
<h1>New Burning Question:</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question:</label>
        {{textarea value=ask id="ask"}}
        <br>
        <label for="author" default="">Author:</label>
        {{input value=author id="author"}}
      </div>

        <label for="notes">Notes:</label>
        {{input value=notes id="notes"}}
      <div>
        <button class="btn-sm btn-success" {{action 'addQuestion'    question}}>Ask!</button>
        <button class="btn-sm btn-danger" {{action 'forgetIt'}}>Forget It!</button>
      </div>
    </form>
  </div>
{{else}}
<div class="center">
  <button class="btn-lg btn-primary"{{action 'questionFormShow'}}>Ask a Question</button>
</div>
{{/if}}
